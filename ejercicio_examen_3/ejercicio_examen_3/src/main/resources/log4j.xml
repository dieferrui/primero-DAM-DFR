<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
    
    <!-- Appendemos siempre antes de las configuraciones de loggers y root -->
    <!-- Console Appender -->
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{ISO8601} [%t] %-5p %c - %m%n"/>
        </layout>
    </appender>

    <!-- File Appender -->
    <appender name="file" class="org.apache.log4j.RollingFileAppender">
        <param name="File" value="logs/application.log"/>
        <param name="MaxFileSize" value="10MB"/>
        <param name="MaxBackupIndex" value="10"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{ISO8601} [%t] %-5p %c - %m%n"/>
        </layout>
    </appender>

    <!-- Loggers especÃ­ficos deben ir antes del root logger -->
    <!-- Logger for specific package with different logging level -->
    <logger name="debug-log">
        <level value="debug"/>
        <appender-ref ref="console"/>
    </logger>

    <logger name="warn-log">
        <level value="debug"/>
        <appender-ref ref="console"/>
    </logger>

    <logger name="error-log">
        <level value="debug"/>
        <appender-ref ref="console"/>
    </logger>

    <logger name="fatal-log">
        <level value="debug"/>
        <appender-ref ref="console"/>
    </logger>

    <!-- Root Logger Configuration -->
    <root>
        <priority value="info"/>
        <appender-ref ref="console"/>
        <appender-ref ref="file"/>
    </root>
    
</log4j:configuration>

